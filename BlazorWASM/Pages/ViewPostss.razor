@page "/ViewPosts"
@using HttpClients.ClientInterfaces
@using Domain.Models
@using Domain.DTOs
@using Microsoft.AspNetCore.Authorization
@inject IPostService postService;
@inject NavigationManager NavigationManager;

@if (posts == null)
{
    <span>Loading..</span>
}
else if (!posts.Any())
{
    <span>No posts to be found</span>
}
else
{
    <div class="users-container">
        @foreach (Post post in posts)
        {

            <h3 style="text-align: center">Overview of all posts</h3>
            <div class="users-container">
                <div class="post-card">
                    <h5>Ttiel: @post.Title</h5>
                    <label >Description: @post.description</label>
                    <br/>
                    <label >Id: @post.Id</label>
                    <br/>
                    <label >Category: @post.category</label>
                    <br/>
                    <label >IMage: @post.imageUrl</label>
                    <br/>
                    <label >Location: @post.location</label>
                    <br/>
                    <label >UserId: @post.userID</label>
                    <br/>
                </div>
            </div>
        }
    </div>

@code {
    private IEnumerable<Post>? posts;
    private Post post;
    private string msg = "";

